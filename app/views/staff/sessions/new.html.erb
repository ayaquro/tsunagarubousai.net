<div class="container mt-5 p-5 card shadow-lg">
  <div class="row m-3">
    <h2 class="col-5 offset-1">
      自治体ご担当者ログイン
    </h2>
  </div>
    <%= form_with model: @staff, url: staff_session_path, local: true do |f| %>
    <div class="row mt-3">
      <div class="col-3 offset-1 text-right">
        <h5>メールアドレス</h5>
      </div>
      <div class="col-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "管理者用メールアドレスを記載してください",class:"form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3 offset-1 text-right">
        <h5>パスワード</h5>
      </div>
      <div class="col-4">
        <%= f.password_field :password, autocomplete: "管理者用パスワードを入力してください",class:"form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3 offset-4">
        <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        <% end %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3 offset-4">
        <%= f.submit "ログイン", class:"btn btn-primary btn-lg btn-block" %>
      </div>
    </div>
    <% end %>
</div>