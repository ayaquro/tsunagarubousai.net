<div class="container mt-5 p-5 card shadow-lg">
  <h1 class="row m-3">
    自治体ご担当者ログイン
  </h1>
  <form>
    <%= form_with model: @staff, url: staff_session_path, local: true do |f| %>
    <div class="form-group">
      <label for="email">メールアドレス</label>
      <input type="email" class="form-control" id="email" placeholder="管理者用メールアドレスを記載してください">
    </div>
    <div class="form-group">
      <label for="password">パスワード</label>
      <input type="password" class="form-control" id="password" placeholder="管理者用パスワードを入力してください">
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
    <button type="submit" class="btn btn-primary btn-lg">ログイン</button>
    <% end %>
  </form>
</div>