<h2><%= @general_user.last_name %><%= @general_user.first_name %>さんのプロフィール編集</h2>
<%= form_with model: @general_user do |f| %>

<div class="field">
<%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
</div>

<div class="field">
    <%= f.label :姓 %><br>
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :名 %><br>
    <%= f.text_field :first_name, autofocus: true %>
    </div>

  <div class="field">
    <%= f.label :セイ %><br>
    <%= f.text_field :kana_last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メイ %><br>
    <%= f.text_field :kana_first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <!--デフォルトがfalseなので、チェックを入れる-->
    <%= f.radio_button :is_deleted, :false, checked: true %>
    <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
    <%= f.radio_button :is_deleted, :true %>
    <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>