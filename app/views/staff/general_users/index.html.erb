<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h1>会員一覧</h1>
    </div>
  </div>
  <table class="table table-hover mt-3 text-center">
    <thead>
      <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">フリガナ</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
        <th scope="col"></th>
      </tr>
    </thead>
      <% @general_users.each do |general_user| %>
        <tr>
          <td><%= general_user.id %></td>
          <td><%= general_user.last_name %><%= general_user.first_name %></td>
          <td><%= general_user.kana_last_name %><%= general_user.kana_first_name %></td>
          <td><%= general_user.email %></td>
          <td>
            <% if general_user.is_deleted == false %>
              <h6 class="text-success">有効</h6>
            <% else %>
              <h6 class="text-danger">退会</h6>
            <% end %>
          </td>
          <td><%= link_to "詳細", staff_general_user_path(general_user), class: "btn btn-sm btn-info" %></td>
        </tr>
      <% end %>
    </table>
    <div class="row">
    <div class="offset-5 col-2 text-center">
      <%= paginate @general_users %>
    </div>
  </div>
</div>