<div class="container mt-5">
  <h1 class="row m-3 text-center">
    ログイン
  </h1>
<%= form_with model: @general_user, url: general_user_session_path, local: true do |f| %>
<%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <form>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
※会員登録されていない方はこちらから<%= render "general_user/shared/links" %>
</div>
</form>

