<div class="container mt-5 p-5 card shadow-lg">
  <div class="row m-3">
    <div class="col-3 offset-1">
      <h1>ログイン</h1>
    </div>
  </div>
    <%= form_with model: @general_user, url: general_user_session_path, local: true do |f| %>
  <div class="row mt-3">
    <div class="col-3 offset-1 text-right">
      <h5>メールアドレス</h5>
    </div>
    <div class="col-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレスを入力",class:"form-control" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3 offset-1 text-right">
      <h5>パスワード</h5>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
    </div>
    <div class="col-4">
      <%= f.password_field :password, autocomplete: "パスワードを入力",class:"form-control" %>
    </div>
  </div>
    <!--<div class="row mt-3">-->
      <!--<div class="col-8 offset-4">-->
        <!--<%# if devise_mapping.rememberable? %>-->
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
        <%# end %>
      <!--</div>-->
    <!--</div>-->
  <div class="row mt-3">
    <div class="col-3 offset-4">
      <%= f.submit "ログイン", class:"btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <% end %>
  <div class="row mt-3">
    <div class="col-8 offset-4">
      ※会員登録されていない方はこちらから<%= render "general_user/shared/links" %>
    </div>
  </div>
</div>