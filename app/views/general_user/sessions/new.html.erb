<div class="container mt-5 p-5 card shadow-lg">
  <h2 class="row m-3">
    ログイン
  </h2>
     <%= form_with model: @general_user, url: general_user_session_path, local: true do |f| %>
    <div class="field">
      <label for="email">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <label for="password">パスワード</label>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
        <%= f.password_field :password, autocomplete: "パスワードを入力" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
    <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary btn-lg" %>
  </div>
    <% end %>
    <div class="row mt-3">
    ※会員登録されていない方はこちらから<%= render "general_user/shared/links" %>
    </div>
</div>