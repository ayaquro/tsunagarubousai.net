<div class="row mt-3">
  <table class="table table-hover">
    <tbody>
    <% if post.posted_comments.present? %>
      <% post.posted_comments.each do |posted_comment| %>
      <tr>
        <td scope="col-2"><%= image_tag posted_comment.general_user.get_profile_image(50,50) %></td>
        <td scope="col-2"><%= posted_comment.general_user.last_name %><%= posted_comment.general_user.first_name %></td>
        <td scope="col-4"><%= posted_comment.posted_comment %></td>
        <td scope="col-2"><%= posted_comment.created_at.strftime("%Y/%m/%d") %></td>
        <!--コメントがログインユーザーのものであれば削除ボタンを表示-->
        <% if posted_comment.general_user == current_general_user %>
        <td scope="col-3">
          <%= link_to "✖", post_posted_comment_path(posted_comment.post,posted_comment), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: "btn-sm btn-danger" %>
        </td>
        <% end %>
      </tr>
      <% end %>
    <% else %>
      <div class="row">
        <div class="col-12">
          コメントはまだありません。
        </div>
      </div>
    <% end %>
    </tbody>
  </table>
</div>