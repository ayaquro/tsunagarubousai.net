<div class="container mt-5 p-5 card shadow-lg">
  <div class="row m-3">
    <h1 class="col-5 offset-1">
      プロフィール編集
    </h1>
  </div>
    <% if @general_user.errors.any? %>
      <%= @general_user.errors.count %>件のエラーが発生しました。
      <ul>
        <% @general_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <%= form_with model: @general_user do |f| %>
    <div class="row mt-3">
      <div class="col-3 offset-1 text-right">
        <h5>プロフィール画像</h5>
      </div>
      <div class="col-6">
        <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2 offset-1 text-right">
        <h5>名前</h5>
      </div>
      <div class="col-1 text-right">  
        <h6>姓</h6>
      </div>
      <div class="col-3">
        <%= f.text_field :last_name, autofocus: true,class:"form-control" %>
      </div>
      <div class="col-1 text-right"> 
        <h6>名</h6>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name, autofocus: true,class:"form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-1 offset-3 text-right">
        <h6>セイ</h6>
      </div>
      <div class="col-3">
        <%= f.text_field :kana_last_name, autofocus: true,class:"form-control" %>
      </div>
      <div class="col-1 text-right">
        <h6>メイ</h6>
      </div>
      <div class="col-3">
        <%= f.text_field :kana_first_name, autofocus: true,class:"form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3 offset-1 text-right">
        <h5>メールアドレス</h5>
      </div>
      <div class="col-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3 offset-1 text-right">
        <h5>パスワード</h5>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-5">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "新しいパスワードを入力",class:"form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3 offset-1 text-right">
        <h5>パスワード</h5><h6>（確認用）</h6>
      </div>
      <div class="col-5">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認のためもう一度入力",class:"form-control" %>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-3 offset-4">
        <%= f.submit "変更を保存", class:"btn btn-success btn-lg" %>
      </div>
    </div>
  <% end %>
</div>